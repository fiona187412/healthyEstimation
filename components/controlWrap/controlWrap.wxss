/* components/controlWrap/controlWrap.wxss */
.control-wrap {
    display: flex;
    flex-direction: column;
    justify-content: left;
    align-items: left;
}
.control-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 10px;
}
.control-title:before {
    content: ' ';
    display: block;
    position: absolute;
}
.control-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: #aaa;
}
.question {
    width: 300px;
    height: 80px;
    border-radius: 20px;
    background-color: #aaa;
    padding: 10px;
}
.control-content {
    width: 100%;
}