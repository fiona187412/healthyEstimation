/* pages/homePage/homePage.wxss */
.health-estimation-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 30px);
  height: 280px;
  background-color: #f5f5f5;
  border-radius: 10%;
  padding: 15px;
  background-clip: content-box;
}

.health-estimation-text {
  margin-top: 30px;
  font-size: 28px;
  font-weight: 600;
}

.health-estimation {
  width: calc(100% - 20px);
}
.history-record-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 30px);
  height: 180px;
  padding: 15px;
  border-radius: 10%;
  background-clip: content-box;
  background-color: #f5f5f5;
}
.history-record {
  height: 150px;
}
.tabs {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 60px;
}
.tab {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 50%;
  height: 100%;
  text-align: center;
}
.tabIcon {
  width: 25px;
}
.tabtext {
  font-size: 12px;
  font-weight: 400;
  margin-bottom: 5px;
}
.show {
  color: #19bb9d;
}
.history-text {
  font-size: 28px;
  font-weight: 600;
  margin-left: 40px;
}
.history-img {
  width: 100px;
  margin-right: 40px;
}